<%- include ('partials/header.ejs'); %>
<body>
  <%- include ('partials/navbar.ejs'); %>
  <div class="container">
    <div class="card mt-5">
      <div class="card-header">
        <h3>Realizar pergunta</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/salvarpergunta">
          <label>Título:</label>
          <input
            type="text"
            name="titulo"
            class="form-control mb-2"
            placeholder="Título"
          />
          <label>Descrição:</label>
          <textarea
            name="descricao"
            class="form-control mb-2"
            placeholder="Descreva sua pergunta aqui"
          ></textarea>
          <button class="btn btn-primary">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>

