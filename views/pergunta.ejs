<%- include ('partials/header.ejs'); %>
<body>
  <%- include ('partials/navbar.ejs'); %>
  <div class="container">
    <hr />
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <form method="POST" action="/responder">
      <h3>Responda</h3>
      <label>Resposta:</label>
      <textarea
        placeholder="Digite sua resposta"
        class="form-control"
        name="corpo"
      ></textarea>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>" />
      <button type="submit" class="btn btn-primary mt-2">Responder</button>
    </form>
    <hr />
    <h3>Respostas</h3>
    <hr />
    <% respostas.forEach((i) => { %>
    <div class="card mb-2">
      <div class="card-body"><%= i.corpo %> <br /></div>
    </div>
    <% }) %>
  </div>
</body>
<%- include ('partials/footer.ejs'); %>
